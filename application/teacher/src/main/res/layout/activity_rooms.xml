<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".activities.RoomRateActivity">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:translationZ="100dp">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"

            style="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/expandedToolbarHeight"
            android:background="@null"
            android:outlineProvider="none"
            app:expanded="false">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                style="@style/collapsing_toolbar_layout"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:title="@string/room_rate"
                app:toolbarId="@+id/toolbar">


                <Button
                    android:id="@+id/toolbar_exit"
                    style="@style/ToolbarNavigationButton"
                    android:layout_gravity="bottom|start" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/header_footer_size"
                    android:clickable="false"
                    app:titleMargin="@null"
                    app:titleMarginStart="49dp" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <LinearLayout
                style="@style/tricky_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/spacing"
                    android:text="1. ágy: Katona Márton\n2. ágy: Kis Gazsi\n3. ágy: Nagy József"
                    android:textAppearance="@style/Description"
                    app:drawableLeftCompat="@drawable/info" />

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/spacing"
                    android:layout_marginBottom="@dimen/text_container_margin"
                    android:background="?android:attr/listDivider" />

            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_height" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/header_footer_size"
                android:background="?android:attr/windowBackground" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/header_footer_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_footer_size"
                android:layout_weight="0"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/HeaderMarginHorizontal">

                <Button
                    android:id="@+id/button_more"
                    style="@style/icon_button_outline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/more_thick" />

                <android.widget.Space
                    android:layout_width="@dimen/spacing"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_publish_all"
                    style="@style/button_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/publish_all"
                    app:icon="@drawable/send" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_background"
        style="@style/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false" />
</FrameLayout>