<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".activities.SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@id/appbar_user"

        android:layout_width="match_parent"
        android:layout_height="@dimen/expandedToolbarHeight"
        app:expanded="false">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@id/collapsing_toolbar_layout"
            style="@style/collapsing_toolbar_layout"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/settings"
            app:toolbarId="@id/toolbar">


            <Button
                android:id="@id/toolbar_exit"
                style="@style/ToolbarNavigationButton"
                android:layout_gravity="bottom|left" />

            <androidx.appcompat.widget.Toolbar
                android:id="@id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_footer_size"
                android:clickable="false"
                app:titleMargin="@null"
                app:titleMarginStart="49dp" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            style="@style/MainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@id/textView10"
                style="@style/CategoryCardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer Settings" />

            <androidx.cardview.widget.CardView
                style="@style/MainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/MainCardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        style="@style/Card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/text_container_margin"
                                android:text="Time offset"
                                android:textAppearance="@style/Title" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.google.android.material.slider.Slider
                                    android:id="@id/settings_slider_time_offset"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:value="0"
                                    android:valueFrom="-24"
                                    android:valueTo="24"
                                    app:labelBehavior="gone" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@id/settings_til_hours"
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:hint="Offset">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/Card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/text_container_margin"
                                android:text="List loading delay"
                                android:textAppearance="@style/Title" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/text_container_margin"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@id/textView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0" />

                                <com.google.android.material.slider.RangeSlider
                                    android:id="@id/settings_slider_list_loading_delay"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:stepSize="0.5"
                                    android:valueFrom="0"
                                    android:valueTo="10"
                                    app:labelBehavior="floating" />

                                <TextView
                                    android:id="@id/textView13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10" />
                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.example.shared.SimpleCardButton
                        android:id="@id/settings_scb_test_activity"
                        custom:text="Open test Activity"
                        custom:description="Hell yeah. Test activity!"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView

                style="@style/CategoryCardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notifications" />

            <androidx.cardview.widget.CardView
                style="@style/MainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/MainCardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.example.shared.SimpleCardButtonWithToggle
                        android:id="@+id/notifics_all"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        custom:text="@string/all" />

                    <com.example.shared.SimpleCardButtonWithToggle
                        android:id="@+id/notifics_arrival"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        custom:description="@string/arrival_reminder_description"
                        custom:text="@string/arrival_reminder" />

                    <com.example.shared.SimpleCardButtonWithToggle
                        android:id="@+id/notifics_occupation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        custom:description="@string/occupation_reminder_description"
                        custom:text="@string/occupation_reminder" />

                    <com.example.shared.SimpleCardButtonWithToggle
                        android:id="@+id/notifics_room"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        custom:text="@string/room_order" />

                    <com.example.shared.SimpleCardButtonWithToggle
                        android:id="@+id/notifics_comm_or_warn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        custom:text="@string/commendation_warning" />

                    <com.example.shared.SimpleCardButtonWithToggle
                        android:id="@+id/notifics_new"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        custom:text="@string/news" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>