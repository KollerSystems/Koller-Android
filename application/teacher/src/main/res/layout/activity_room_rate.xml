<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical"
    tools:context=".activities.RoomRateActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_user"

        android:layout_width="match_parent"
        android:layout_height="@dimen/expandedToolbarHeight"
        app:expanded="false">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            style="@style/collapsing_toolbar_layout"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/room_rate"
            app:toolbarId="@+id/toolbar">


            <Button
                android:id="@+id/toolbar_exit"
                style="@style/ToolbarNavigationButton"
                android:layout_gravity="bottom|left" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_footer_size"
                android:clickable="false"
                app:titleMargin="@null"
                app:titleMarginStart="49dp" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <LinearLayout
            style="@style/tricky_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableLeftCompat="@drawable/info"
                android:drawablePadding="@dimen/spacing"
                android:text="1. ágy: Katona Márton\n2. ágy: Kis Gazsi\n3. ágy: Nagy József"
                android:textAppearance="@style/Description" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing"
                android:layout_marginBottom="@dimen/text_container_margin"
                android:background="?android:attr/listDivider" />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <TextView
            android:id="@+id/textView14"
            style="@style/separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Értékelési szempontok"
            android:translationZ="1dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/full_card_padding"
            android:paddingBottom="@dimen/card_margin"
            tools:listitem="@layout/view_rating_slider" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_fixed_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/full_card_padding"
            android:layout_marginBottom="@dimen/full_card_padding"
            app:cardElevation="@dimen/header_footer_elevation"
            app:cardPreventCornerOverlap="false"
            app:shapeAppearanceOverlay="@style/overlayRoundedCardBottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing"
                        android:layout_weight="0"
                        android:text="Értékelés" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_final_rate_none"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:checked="true"
                                app:chipEndPadding="0dp"
                                app:chipIcon="@drawable/line_thick"
                                app:chipIconVisible="true"
                                app:chipMinTouchTargetSize="0dp"
                                app:shapeAppearance="@style/overlayRoundedLeft"
                                app:textEndPadding="2dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_final_rate_slider"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:chipEndPadding="0dp"
                                app:chipIconVisible="true"
                                app:chipMinTouchTargetSize="0dp"
                                app:shapeAppearance="@style/overlayRoundedRight"
                                app:textEndPadding="2dp" />
                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/slider_final_rate"
                            style="@style/Widget.AppCompat.SeekBar.Discrete"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginLeft="34dp"
                            android:layout_marginTop="-20dp"
                            android:layout_marginBottom="-20dp"
                            android:alpha="0.5"
                            android:stepSize="0.5"
                            android:value="3"
                            android:valueFrom="1"
                            android:valueTo="5"
                            app:labelBehavior="gone" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/text_final_rate"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/panel_padding"
                    android:layout_weight="0"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/circle_outline"
                    android:backgroundTint="?attr/colorOutline"
                    android:ellipsize="none"
                    android:gravity="center"
                    android:lines="1"
                    android:padding="@dimen/spacing"
                    android:text="Nincs"
                    android:textAppearance="@style/MainTitleExpanded"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/header_footer_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_footer_size"
                android:layout_weight="0"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/HeaderMarginHorizontal">

                <Button
                    android:id="@+id/button_more"
                    style="@style/icon_button_outline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/more_thick" />

                <android.widget.Space
                    android:layout_width="@dimen/spacing"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_publish_all"
                    style="@style/button_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/publish_all"
                    app:icon="@drawable/send" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>