<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_icon"
        style="@style/Icon"
        android:layout_width="@dimen/panel_icon_smaller"
        android:layout_height="@dimen/panel_icon_smaller"
        android:layout_gravity="center_vertical"
        android:alpha="0.666"
        android:src="@drawable/flag" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/text_container_margin"
        android:layout_marginRight="@dimen/text_container_margin"
        android:layout_marginBottom="@dimen/text_container_margin"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report" />

        <TextView
            android:id="@+id/text_description"
            style="@style/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/report_room_desc" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout_end"
        android:layout_width="@dimen/panel_icon_smaller"
        android:layout_height="@dimen/panel_icon_smaller"
        android:visibility="gone">

        <TextView
            android:id="@+id/badge"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/circle"
            android:backgroundTint="?attr/colorError"
            android:gravity="center"
            android:minWidth="25dp"
            android:paddingLeft="7.5dp"
            android:paddingRight="7.5dp"
            android:text="0"
            android:textColor="?android:attr/colorBackground"
            tools:ignore="HardcodedText" />
    </FrameLayout>

</LinearLayout>