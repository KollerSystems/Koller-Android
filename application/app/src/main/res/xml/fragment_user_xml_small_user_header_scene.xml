<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:layoutDuringTransition="honorRequest"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/text_user_name"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/user_text_description"
            motion:layout_constraintVertical_bias="1"
            motion:layout_constraintTop_toBottomOf="@+id/outline"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="30" />
        </Constraint>
        <Constraint
            android:id="@+id/user_text_description"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/view4"
            android:layout_marginBottom="@dimen/spacing"
            motion:layout_constraintVertical_bias="0"
            motion:layout_constraintTop_toBottomOf="@+id/text_user_name"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="15" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imageView12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            motion:layout_constraintEnd_toEndOf="@+id/outline"
            motion:layout_constraintBottom_toBottomOf="@+id/outline"
            motion:layout_constraintTop_toTopOf="@+id/outline"
            motion:layout_constraintStart_toStartOf="@+id/outline" />
        <Constraint
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/spacing"
            android:layout_marginBottom="@dimen/spacing"
            motion:layout_constraintTop_toTopOf="@id/guideline3"
            motion:layout_constraintBottom_toBottomOf="@id/view4"
            android:layout_width="40dp"
            motion:layout_constraintStart_toStartOf="@+id/view4"
            android:layout_marginLeft="20dp"
            android:id="@+id/outline"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="0dp"
            motion:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toEndOf="@+id/imageView12"
            motion:layout_constraintBottom_toTopOf="@+id/user_text_description"
            motion:layout_constraintEnd_toEndOf="@+id/user_text_description"
            android:layout_width="wrap_content"
            android:id="@+id/text_user_name"
            motion:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="@dimen/spacing"
            motion:layout_constraintTop_toBottomOf="@+id/outline">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="20" />
            <CustomAttribute
                motion:attributeName="scaleFromTextSize" />
        </Constraint>
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toEndOf="@+id/imageView12"
            motion:layout_constraintEnd_toEndOf="@id/view4"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/text_user_name"
            android:id="@+id/user_text_description"
            motion:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            motion:layout_constraintBottom_toTopOf="@+id/outline">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="12.75" />
        </Constraint>
        <Constraint
            android:id="@+id/view4"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0.33"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>