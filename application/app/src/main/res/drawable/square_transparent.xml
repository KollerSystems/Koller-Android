        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:height="45dp" android:gravity="bottom">
        <shape android:shape="rectangle">
        <gradient
            android:type="linear"
            android:angle="90"
            android:endColor="#FFFFFF"
            android:startColor="#00FFFFFF"/>
        </shape>
    </item>
</layer-list>