<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_parent"
    style="@style/Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:outlineProvider="none"
    app:cardElevation="25dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/notification_card_new_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/n_spacing"
        android:layout_marginTop="@dimen/n_spacing"
        android:outlineProvider="none"
        android:visibility="invisible"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardElevation="100dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing"
            android:layout_marginVertical="@dimen/text_container_margin"
            android:text="@string/new_"
            android:textAppearance="@style/Description"
            android:textColor="?android:attr/colorBackground" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/notification_icon_start"
            style="@style/Icon"
            android:layout_width="@dimen/panel_icon"
            android:layout_height="@dimen/panel_icon"
            android:layout_marginRight="@dimen/text_container_margin"
            android:alpha="0.666"
            app:srcCompat="@drawable/room" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_container_margin"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comment_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:fadingEdgeLength="50dp"
                android:requiresFadingEdge="horizontal"
                android:singleLine="true"
                android:text="@string/title"
                android:textAppearance="@style/Title" />

            <TextView
                android:id="@+id/comment_text"
                style="@style/Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ellipsize="none"
                android:fadingEdgeLength="50dp"
                android:requiresFadingEdge="horizontal"
                android:singleLine="true"
                android:text="@string/description" />

        </LinearLayout>

        <TextView
            android:id="@+id/notification_icon_end"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/panel_icon"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_container_margin"
            android:backgroundTint="?android:attr/colorForeground"
            android:foregroundGravity="center"
            android:gravity="center"
            android:minWidth="@dimen/panel_icon"
            android:text="C"
            android:textAlignment="center"
            android:textColor="#00BF9F"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/notification_card_unread_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/n_panel_padding"
        android:layout_marginTop="@dimen/n_panel_padding"
        android:layout_marginRight="@dimen/n_panel_padding"
        android:layout_marginBottom="@dimen/n_panel_padding"
        android:outlineProvider="none"
        app:cardCornerRadius="0dp"
        app:cardElevation="-24dp" />
</com.google.android.material.card.MaterialCardView>