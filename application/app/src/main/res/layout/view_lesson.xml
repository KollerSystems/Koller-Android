<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lesson_text_index"
            style="@style/Title"
            android:layout_width="@dimen/panel_icon"
            android:layout_height="@dimen/panel_icon"
            android:gravity="center"
            android:text="n."
            android:textAlignment="center"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/text_container_margin"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="@dimen/text_container_margin"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lesson_text_title"
                style="@style/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title" />

            <TextView
                android:id="@+id/lesson_text_place"
                style="@style/Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/description" />

        </LinearLayout>

        <TextView
            android:id="@+id/lesson_text_time"
            style="@style/Description"
            android:layout_width="35sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="-5sp"
            android:text="from\n-\nto"
            android:textAlignment="center" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>