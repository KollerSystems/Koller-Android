<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="@dimen/text_container_margin"
        android:right="@dimen/text_container_margin"
        android:top="@dimen/text_container_margin"
        android:bottom="@dimen/text_container_margin">

        <layer-list>
            <item>
                <rotate android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="line">
                        <stroke android:width="2dp"
                            android:color="?attr/colorYellow"
                            android:dashGap="5dp"
                            android:dashWidth="15dp"/>
                    </shape>
                </rotate>
            </item>
            <item>
                <shape android:shape="oval">
                    <stroke android:color="?attr/colorYellow" android:width="2dp"/>

                </shape>
            </item>
        </layer-list>


    </item>

    <item android:width="25dp"
        android:height="25dp"
        android:gravity="top|start">
        <layer-list>
            <item>
                <shape
                    android:shape="oval">
                    <stroke android:width="2dp" android:color="?attr/colorYellow" />
                    <solid android:color="?attr/colorSurface"/>

                </shape>
            </item>

            <item android:drawable="@drawable/question_mark" android:top="@dimen/text_container_margin"
                android:bottom="@dimen/text_container_margin"
                android:left="@dimen/text_container_margin"
                android:right="@dimen/text_container_margin"/>
        </layer-list>
    </item>

</layer-list>