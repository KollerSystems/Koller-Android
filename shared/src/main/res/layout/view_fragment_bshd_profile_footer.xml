<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView38"
        style="@style/CategoryCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/development_team" />

    <androidx.cardview.widget.CardView
        style="@style/MainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            style="@style/MainCardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView
                style="@style/Card"
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView40"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_container_margin"
                        android:text="@string/made_by"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/n_card_padding"
                        android:layout_marginRight="@dimen/n_card_padding"
                        android:clipToPadding="false"
                        android:paddingHorizontal="@dimen/card_padding"
                        tools:itemCount="1"
                        tools:listitem="@layout/view_dev" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.norbert.koller.shared.customviews.SimpleCardButton
                android:id="@+id/profile_card_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:icon="@drawable/support_us"
                custom:text="@string/support_us" />

            <com.norbert.koller.shared.customviews.SimpleCardButton
                android:id="@+id/profile_card_github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:icon="@drawable/github"
                custom:text="GitHub"
                custom:description="Forráskódok • Javaslatok • Hibák">

            </com.norbert.koller.shared.customviews.SimpleCardButton>

            <com.norbert.koller.shared.customviews.SimpleCardButton
                android:id="@+id/profile_fbtn_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:icon="@drawable/mail"
                custom:text="@string/email" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@id/text_version"
        style="@style/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/card_padding"
        android:text="@string/version"
        android:textAlignment="center" />
</LinearLayout>