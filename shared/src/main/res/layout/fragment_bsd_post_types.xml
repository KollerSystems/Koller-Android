<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BottomSheetMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.bottomsheet.PostTypesBsdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            style="@style/MainCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                style="@style/MainCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/post_type_ly_news"
                    style="@style/Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            style="@style/Icon"
                            android:layout_width="@dimen/card_icon"
                            android:layout_height="@dimen/card_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/text_container_margin"
                            android:alpha="0.666"
                            app:srcCompat="@drawable/announce" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/text_container_margin"
                            android:layout_weight="1"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/news_one" />

                            <TextView
                                style="@style/Description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/news_desc" />

                            <TextView
                                android:id="@+id/comment_text8"
                                style="@style/Description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/high_priority_highlighting"
                                android:textColor="?attr/colorRed" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/post_type_ly_program"
                    style="@style/Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            style="@style/Icon"
                            android:layout_width="@dimen/card_icon"
                            android:layout_height="@dimen/card_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/text_container_margin"
                            android:alpha="0.666"
                            app:srcCompat="@drawable/tour" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/text_container_margin"
                            android:layout_weight="1"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/program" />

                            <TextView
                                style="@style/Description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/program_desc" />

                            <TextView
                                android:id="@+id/comment_text7"
                                style="@style/Description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/medium_priority_highlighting"
                                android:textColor="?attr/colorYellow" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/post_type_ly_post"
                    style="@style/Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_icon"
                            style="@style/Icon"
                            android:layout_width="@dimen/card_icon"
                            android:layout_height="@dimen/card_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/text_container_margin"
                            android:alpha="0.666"
                            app:srcCompat="@drawable/paper" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/text_container_margin"
                            android:layout_weight="1"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_text"
                                style="@style/Title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/general_post" />

                            <TextView
                                android:id="@+id/text_description"
                                style="@style/Description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/general_post_desc" />

                            <TextView
                                android:id="@+id/comment_text6"
                                style="@style/Description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/low_priority_highlighting"
                                android:textColor="?attr/colorGreen" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>