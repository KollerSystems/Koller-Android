<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".activities.ManageAccountActivity"
    style="@style/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/full_card_padding"
    android:paddingTop="@dimen/full_card_padding"
    android:paddingEnd="@dimen/full_card_padding"
    android:paddingBottom="@dimen/full_card_padding"
    app:alignItems="center"
    app:flexDirection="column">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_maxWidth="@dimen/tablet_max_width_with_text_container" >

            <com.norbert.koller.shared.customviews.UserView
                android:id="@+id/user"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:stroke_width="5dp">

            </com.norbert.koller.shared.customviews.UserView>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/application_padding"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/text_container_margin"
                android:text="@string/unknown"
                android:textAppearance="@style/MainTitle"
          />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Személyes adatok kezelése"
                style="@style/CategoryCardNameBald"/>

            <com.norbert.koller.shared.customviews.CardButton
                android:id="@+id/cb_student"
                style="@style/CardTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="Te / Tanuló"
                app:icon="@drawable/user" />

            <com.norbert.koller.shared.customviews.CardButton
                android:id="@+id/cb_caretaker"
                style="@style/CardMiddle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/parent"
                app:text="Gondviselő" />

            <com.norbert.koller.shared.customviews.CardButton
                android:id="@+id/cb_close_relative"
                style="@style/CardMiddle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/close_person"
                app:text="Közeli rokon" />

            <com.norbert.koller.shared.customviews.CardButton
                style="@style/CardBottom"
                android:id="@+id/cb_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/building"
                app:text="@string/school" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biztonság"
                style="@style/CategoryCardNameBald"/>
            <com.norbert.koller.shared.customviews.CardButton
                android:id="@+id/cb_password"
                style="@style/CardSingle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:icon="@drawable/key"
                custom:text="Jelszó módosítása" />

            <com.norbert.koller.shared.customviews.CardButton
                style="@style/CardBottom"
                android:id="@+id/cb_devices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:icon="@drawable/devices"
                app:text="@string/devices"
                tools:visibility="visible" />

    </LinearLayout>
</com.google.android.flexbox.FlexboxLayout>