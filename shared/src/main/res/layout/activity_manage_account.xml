<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".activities.ManageAccountActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="@dimen/expanded_toolbar_height"
        android:visibility="visible"
        app:expanded="false"
        tools:visibility="gone">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/CollapsingToolbarLayout"
            style="@style/CollapsingToolbarLayout"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Fiók kezelése"
            app:toolbarId="@+id/toolbar">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_footer_size"
                android:clickable="false"
                app:titleMargin="@null"
                app:titleMarginStart="50dp" />
            <Button
                android:id="@+id/toolbar_exit"
                style="@style/ToolbarNavigationButton"
                android:layout_gravity="bottom|start" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <com.google.android.flexbox.FlexboxLayout
            style="@style/MainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/full_card_padding"
            android:paddingTop="@dimen/full_card_padding"
            android:paddingEnd="@dimen/full_card_padding"
            android:paddingBottom="@dimen/full_card_padding"
            app:alignItems="center"
            app:flexDirection="column">

            <com.norbert.koller.shared.customviews.RoundedBadgeImageView
                android:id="@+id/rbiv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:stroke_width="5dp">

            </com.norbert.koller.shared.customviews.RoundedBadgeImageView>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/application_padding"
                android:padding="@dimen/text_container_margin"
                android:text="@string/unknown"
                android:textAppearance="@style/MainTitle"
                app:layout_maxWidth="@dimen/tablet_max_width" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Személyes adatok kezelése"
                style="@style/CategoryCardNameBald"/>

            <com.norbert.koller.shared.customviews.SimpleCardButton
                android:id="@+id/scb_student"
                style="@style/CardTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="Te / Tanuló"
                app:icon="@drawable/user" />

            <com.norbert.koller.shared.customviews.SimpleCardButton
                android:id="@+id/scb_caretaker"
                style="@style/CardMiddle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/parent"
                app:text="Gondviselő" />

            <com.norbert.koller.shared.customviews.SimpleCardButton
                android:id="@+id/scb_close_relative"
                style="@style/CardMiddle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/close_person"
                app:text="Közeli rokon" />

            <com.norbert.koller.shared.customviews.SimpleCardButton
                style="@style/CardBottom"
                android:id="@+id/scb_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/building"
                app:text="@string/school" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biztonság"
                style="@style/CategoryCardNameBald"/>
            <com.norbert.koller.shared.customviews.SimpleCardButton
                android:id="@+id/scb_password"
                style="@style/CardSingle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:icon="@drawable/key"
                custom:text="Jelszó módosítása" />

            <com.norbert.koller.shared.customviews.SimpleCardButton
                style="@style/CardBottom"
                android:id="@+id/scb_devices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:icon="@drawable/devices"
                app:text="@string/devices"
                tools:visibility="visible" />


        </com.google.android.flexbox.FlexboxLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>