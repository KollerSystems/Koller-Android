<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MainTheme"
    android:background="@drawable/card"
    android:backgroundTint="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/card_padding_half"
        android:paddingTop="@dimen/card_full_margin"
        android:showDividers="middle">

        <TextView
            style="@style/CategoryCardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing"
            android:paddingVertical="@dimen/text_container_margin"
            android:text="@string/fake_date_1" />

        <include
            layout="@layout/widget_item_canteen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:theme="@style/FakeCanteenItemBreakfast1" />

        <include
            layout="@layout/widget_item_canteen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:theme="@style/FakeCanteenItemLunch1" />

        <include
            layout="@layout/widget_item_canteen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:theme="@style/FakeCanteenItemDinner1" />

        <TextView
            style="@style/CategoryCardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing"
            android:paddingVertical="@dimen/text_container_margin"
            android:text="@string/fake_date_2" />

        <include
            layout="@layout/widget_item_canteen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:theme="@style/FakeCanteenItemBreakfast2" />

        <include
            layout="@layout/widget_item_canteen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:theme="@style/FakeCanteenItemLunch2" />
    </LinearLayout>

</FrameLayout>
