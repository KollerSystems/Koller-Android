<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fragments.StudentHostelFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FejlesztÃ©s alatt" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.cardview.widget.CardView
        style="@style/MainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerDrawable="@drawable/divider"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:showDivider="middle">

            <Button
                android:id="@+id/student_hostel_button_rooms"
                style="@style/CardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_padding"
                android:paddingRight="@dimen/card_padding"
                android:text="@string/places"
                app:icon="@drawable/room"
                app:layout_flexGrow="1" />

            <Button
                android:id="@+id/student_hostel_button_users"
                style="@style/CardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_padding"
                android:paddingRight="@dimen/card_padding"
                android:text="@string/users"
                app:icon="@drawable/people"
                app:layout_flexGrow="1" />

            <Button
                android:id="@+id/button_study_groups"
                style="@style/CardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_padding"
                android:paddingRight="@dimen/card_padding"
                android:text="@string/study_groups"
                app:icon="@drawable/rocket"
                app:layout_flexGrow="1" />

            <Button
                android:id="@+id/button_base_programs"
                style="@style/CardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_padding"
                android:paddingRight="@dimen/card_padding"
                android:text="@string/base_programs"
                android:visibility="gone"
                app:icon="@drawable/base_program"
                app:layout_flexGrow="1"
                tools:visibility="visible" />
        </com.google.android.flexbox.FlexboxLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>