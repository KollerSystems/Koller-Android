<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:custom="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"
tools:context=".activities.EditRoomActivity">


<com.norbert.koller.shared.customviews.AppBarLayout
    android:id="@id/app_bar"

    android:layout_width="match_parent"
    android:layout_height="@dimen/expanded_toolbar_height"
    android:outlineProvider="none"
    android:visibility="visible"
    app:expanded="false"
    tools:visibility="gone">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@id/collapsing_toolbar"
        style="@style/CollapsingToolbarLayout"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:title="Szoba szerkesztÃ©se"
        app:toolbarId="@id/toolbar">




        <androidx.appcompat.widget.Toolbar
            android:id="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_footer_size"
            android:clickable="false"
            app:titleMargin="@null"
            app:titleMarginStart="49dp" />

        <Button
            android:id="@id/button_back"
            style="@style/ToolbarNavigationButton"
            android:layout_gravity="bottom|start" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.norbert.koller.shared.customviews.AppBarLayout>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    <LinearLayout
        style="@style/MainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/text_container_margin"
            tools:itemCount="2"
            tools:listitem="@layout/item_user_small" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/CardTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:enabled="false"
            android:hint="@string/room_number"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusBottomStart="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textCapSentences|textMultiLine"
                android:maxLength="50"
                android:textAppearance="@style/Text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/CardTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/group"
            app:boxCornerRadiusTopEnd="0dp"
            app:boxCornerRadiusTopStart="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textCapSentences|textMultiLine"
                android:maxLength="50"
                android:textAppearance="@style/Text" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>