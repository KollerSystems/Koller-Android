<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/text_container_margin"
        android:layout_marginTop="@dimen/text_container_margin"
        android:text="@string/time_range" />

    <com.google.android.material.slider.RangeSlider

        android:id="@+id/range_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/n_text_container_margin"
        android:layout_marginBottom="@dimen/text_container_margin"
        android:stepSize="1"
        android:valueFrom="1"
        android:valueTo="4"
        app:labelBehavior="withinBounds" />

    <com.norbert.koller.shared.customviews.TipView
        android:id="@+id/tip_time_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/text_container_margin"
        android:layout_marginBottom="@dimen/text_container_margin"
        custom:text="Az időtartam beállításához fogja meg a fent látható csúszkát és a jobbra / balra mozgatásával állítsa be, hogy ezt a tanórát melyik órákon szeretné tartani."
        custom:type="help" />
</merge>